@{
    ViewBag.Title = "Assessment Presentation";
}
<div class="row">
    <div class="col-md-12">
        <div class="product-info">
            <img src="~/img/lifetime.jpg" />
            <h3>Mug</h3>
            <ul class="product-props">
                <li>Price: $752.000</li>
                <li>Vendor: Andrés López</li>
                <li>Title: Great paint</li>
                <li>Description: My dreams</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy!</button>
        </div>

        <div id="theForm">
            <form>
                <label>Fullname:</label>
                <br />
                <input />
                <br />
                <label>E-mail:</label>
                <br />
                <input type="email" />
                <br />
                <label>Subject:</label>
                <br />
                <input />
                <br />
                <label>Message:</label>
                <br />
                <textarea rows="4"></textarea>
                <br />
                <input type="submit" value="Send Message" />
            </form>
        </div>

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember Me?</label>
                </div>
                <div>
                    <input type="submit" value="Login" />
                </div>
            </form>
        </div>
    </div>
</div>